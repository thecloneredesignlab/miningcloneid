{
  "name": "R (rig minimal)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
      "version": "release"
    }
  },
  "forwardPorts": [8787],
  "portsAttributes": { "8787": { "label": "RStudio Server" } },
  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "Ikuyadeu.r",
        "quarto.quarto"
      ]
    }
  },
  "onCreateCommand": "sudo apt-get update && sudo apt-get install -y git-lfs && git lfs install --force && git lfs pull && bash .devcontainer/install.sh",
  "postCreateCommand": "bash .devcontainer/download.sh"
}
