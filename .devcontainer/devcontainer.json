{
  "name": "R (rig minimal)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
      "version": "release"   // installs latest R via rig
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "Ikuyadeu.r",
        "quarto.quarto"
      ]
    }
  },
  "postCreateCommand": "git lfs install || true && git lfs pull || true"
}
